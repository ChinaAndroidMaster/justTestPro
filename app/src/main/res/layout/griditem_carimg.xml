<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:padding="@dimen/dimen_3dip"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/griditem_carimg_imgv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150dip"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/default_carimg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/griditem_carimg_isrequired"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_25dip"
            android:gravity="center"
            android:text="@string/carcheck_photo_symbol"
            android:textColor="@color/carcheck_symbol_orange" />

        <TextView
            android:id="@+id/griditem_carimg_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_25dip"
            android:gravity="center"
            android:text="@string/carcheck_photo_left"
            android:textColor="@color/carcheck_text_black"
            android:textSize="@dimen/dimen_11sp"/>

    </LinearLayout>

</LinearLayout>