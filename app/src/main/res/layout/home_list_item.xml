<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/home_iv_car"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        android:src="@mipmap/default_carimg"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/home_tv_carName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxWidth="200dp"
                android:text="雪铁龙-世嘉"
                android:textColor="#333333"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/home_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:text="2016/05/21 15:05"
                android:textColor="#8c8c8c"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            >

            <TextView
                android:id="@+id/home_tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxWidth="200dp"
                android:text="2013版"
                android:textColor="#333333"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/home_tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:text="待审核"
                android:textColor="#005aff"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/home_tv_carSaleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车商名称：东风极速"
                    android:textColor="#8c8c8c"
                    android:textSize="12sp"
                    android:layout_marginBottom="2dp"
                    />
                <TextView
                    android:id="@+id/home_tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话：18703929932"
                    android:textColor="#8c8c8c"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/home_iv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/check_selector"
                    android:layout_centerVertical="true"
                />
                <TextView
                    android:id="@+id/home_tv_ivState"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="查看"
                    android:textColor="#ffffff"/>
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>